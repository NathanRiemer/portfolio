<!DOCTYPE html>
<html ng-app="PortfolioApp">
  <head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nathan Riemer</title>



    <script type="text/javascript" src="jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css">
    <script src="semantic/dist/semantic.min.js"></script>
    <script type="text/javascript" src="angular/angular.min.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
    <script type="text/javascript" src="js/projects_controller.js"></script>



    <style type="text/css">
    .main.container {
      margin-top: 4em;
    }
    </style>


  </head>
  <body>
    <div class="ui fixed menu">
      <div class="ui container">
        <a href="#" class="header item">
          Nathan Riemer
        </a>
        <a href="#about" class="item">About</a>
        <a href="#projects" class="item">Projects</a>
        <a href="#contact" class="item">Contact</a>
      </div>
    </div><!-- .ui.fixed.menu -->


    <div class="ui main container">
      <div class="ui raised text container segment" id="about">
        <h1 class="ui header">Nathan Riemer</h1>
        <p>I'm a web developer with a passion for problem solving.</p>
      </div>

      <section id="projects" ng-controller="ProjectsController as projects">
        <h1>Projects:</h1>
        <p>Show:</p>
        <button class="compact mini ui button" ng-repeat="technology in projects.technologies" ng-click="projects.fetch(technology)">{{technology}}</button>

        <div class="three ui cards">
          <div class="card" ng-repeat="project in projects.all">
            <div class="image">
              <img ng-src="{{project.image}}">
            </div>
            <div class="content">
              <a class="header" href="{{project.url}}" target="_blank">{{project.title}}</a>
              <a class="meta" href="{{project.github}}" target="_blank">GitHub Repo</a>
              <div class="description">
                {{project.description}}
              </div>
            </div>
            <div class="extra content">
              <button class="compact mini ui button" ng-repeat="technology in project.technologies">
                {{technology}}
              </button>
            </div>
          </div>

        </div> <!-- .ui.cards -->
      </section>

      <section id="contact">
        <p>Contact info?</p>
      </section>
    </div> <!-- .main -->
  </body>
</html>