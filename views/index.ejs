<!DOCTYPE html>
<html ng-app="PortfolioApp">
  <head>
    <title>Nathan Riemer</title>



    <script type="text/javascript" src="jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css">
    <script src="semantic/dist/semantic.min.js"></script>
    <script type="text/javascript" src="angular/angular.min.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
    <script type="text/javascript" src="js/projects_controller.js"></script>


  </head>
  <body>
    <nav>
      <ul>
        <li>Nathan Riemer</li>
        <li><a href="#about">About</a></li>
        <li><a href="#projects">Projects</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </nav>
    <div class="main">
      <section id="about">
        <h1>Nathan Riemer</h1>
        <p>I'm a web developer with a passion for problem solving.</p>
      </section>

      <section id="projects">
        <h1>Projects:</h1>
        <p>Show:</p>
        <ul class="technology-filter">
          <li><button>All</button></li>
        </ul>
        <div class="ui cards" ng-controller="ProjectsController as projects">
          <div class="card" ng-repeat="project in projects.all">
            <div class="image">
              <img src="{{project.image}}">
            </div>
            <div class="content">
              <a class="header" href="{{project.url}}">{{project.title}}</a>
              <div class="description">
                {{project.description}}
              </div>
            </div>
            <div class="extra content">
              <button class="compact mini ui button" ng-repeat="technology in project.technologies">
                {{technology}}
              </button>
            </div>
          </div>

        </div> <!-- .ui.cards -->
      </section>

      <section id="contact">
        <p>Contact info?</p>
      </section>
    </div> <!-- .main -->
  </body>
</html>